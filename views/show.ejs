<% include ./partials/header.ejs %>

<div class="ui main text container segment">
    <h1 class="ui huge header"><%= blog.title %></h1>
    <div class="ui top attached">
        <div clas="item">
            <img class="ui centered rounded image" src= "<%= blog.image %>">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
        </div>
        <div class="description">
            <p><%= blog.body %> 
        </div>
    </div>
    <form class="ui form" action="/blogs/<%= blog._id %>/edit" method="get">
        <input type="submit" class="ui button" value="Edit Blog">
    </form>

    <form class="ui form" action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
        <input type="submit" class="ui red button" value="Delete Blog">
    </form>
</div>

<% include ./partials/footer.ejs %> 
