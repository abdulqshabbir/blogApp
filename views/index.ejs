<% include ./partials/header.ejs %> 

<h1> Welcome to our Animal Blog </h1>

<% blogs.forEach(function(blog){ %>
    <div class="ui main text container segment" style="width: 60%">
        <h2><%=blog.title %></h2>
        <img class="ui centered medium bordered circular image" src=<%= blog.image %> height=200 width=300 >
        <br>
        <span><%=blog.created%></span>
        <p><%= blog.body.substring(0, 100)%>...</p>
        <a href="/blogs/<%= blog._id %>">Read More</a>
    </div>      
<% }) %> 

<% include ./partials/footer.ejs %>
