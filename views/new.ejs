<% include ./partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <p>New Blog</p>
        <form class="ui form" action="/blogs" method="post">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Title of your blog">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="Paste image URL">
            </div>
            <div class="field">
                <label>Blog Body</label>
                <textarea name="blog[body]"></textarea>
            </div>
            <input type="submit" class="ui button">
        </form>
    </div>  
</div>

